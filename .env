# Use LocalExecutor so tasks can run in parallel (good for learning)
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Airflow metadata DB (stored in the Postgres container)
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow

# Don’t load example DAGs
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Auto-unpause DAGs when they appear (so you don’t have to click “unpause” each time)
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=False

# Optional: show config in the UI (helpful while learning)
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True

# Optional: logging level
AIRFLOW__LOGGING__LOGGING_LEVEL=INFO
